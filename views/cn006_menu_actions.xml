<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción para listar proyectos para modificación en Kanban -->
    <record id="cn006_action_project_kanban_mod" model="ir.actions.act_window">
        <field name="name">(Real) Proyectos</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('cn006_proyectos_it.cn006_project_project_view_kanban_mod')}),
            (0, 0, {'view_mode': 'form','view_id': ref('cn006_proyectos_it.cn006_project_project_view_form')})
        ]"/>
    </record>

    <!--  Acción para abrir vista de modificación de proyectos  -->
    <record id="cn006_action_project_form" model="ir.actions.act_window">
        <field name="name">Proyectos IT</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cn006_proyectos_it.cn006_project_project_view_form"/>
        <field name="target">current</field>
    </record>

    <!--  Menú > Configuración > Clasificaciones-->
    cn006_action_proyecto_clasificacion
    <record id="cn006_action_proyecto_clasificacion" model="ir.actions.act_window">
        <field name="name">Clasificación de Proyectos</field>
        <field name="res_model">cn006.proyecto.clasificacion</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="cn006_proyectos_it.cn006_proyecto_clasificacion_view_tree"/>
    </record>

</odoo>
